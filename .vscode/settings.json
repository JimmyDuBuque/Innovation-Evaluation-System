{
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "[solidity]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "solidity.linter": "solhint",
  "solidity.solhintRules": {},
  "solidity.compileUsingRemoteVersion": "0.8.24",
  "files.exclude": {
    "**/node_modules": true,
    "**/artifacts": true,
    "**/cache": true,
    "**/.DS_Store": true
  }
}
